{{> header}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Settings</h1>
        </div>
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <form class="form" action="/settings" method="post">
                        <h3>Links</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Title</label>
                            </div>
                            <div class="col-md-6">
                                <label>Url</label>
                            </div>
                        </div>
                        {{#each settings.links}}
                        <div class="form-group row">
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="link_title"/ placeholder="title" value="{{title}}" />
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="link_url" placeholder="url" value="{{url}}" />
                            </div>
                        </div>
                        {{/each}}
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label>Add a new link:</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="link_title"/ placeholder="title">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" name="link_url" placeholder="url" />
                            </div>
                        </div>
                        <div>
                            <input class="btn btn-default" type="submit" value="Save"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
