
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>Gigs</h1>
            {{#each gigs}}
                {{@this}}
            {{/each}}
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-body">
                    <h3>New gig</h3>
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Naam</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Naam">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Adres</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Adres">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Datum</label>
                            <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Times">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tijden</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tijden">
                        </div>
                        <div class="checkbox">
                            <label>
                              <input type="checkbox"> Bevestigd
                            </label>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Opslaan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>