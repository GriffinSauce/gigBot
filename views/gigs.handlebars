<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Gigs</h1>
        </div>
        <div class="col-md-9">
            {{#each gigs}}
            <div class="panel gig">
                <div class="panel-heading">
                    <h3 class="panel-title">{{dateFormat date 'D MMMM YYYY'}}</h3>
                    <h4 class="confirmed">
                        {{#if confirmed}}
                        <span class="label label-success">Bevestigd</span>
                        {{else}}
                        <span class="label label-warning">Nog niet bevestigd</span>
                        {{/if}}
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{venue.name}}</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>{{{whitespace venue.address}}}</p>
                        </div>
                        <div class="col-sm-6">
                            <p>{{{whitespace times}}}<p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>{{{whitespace backline}}}<p>
                        </div>
                        <div class="col-sm-6">
                            <p>{{{whitespace comments}}}<p>
                        </div>
                        <div class="col-md-12">
                            <button class="btn pull-right btn-sm btn-danger">Verwijderen</button>
                            <button class="btn pull-right btn-sm btn-default">Aanpassen</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-md-3 new-gig">
            <form class="form" role="search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Zoeken naar...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </form>
            <button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span> Nieuwe gig</button>
            <p>Vet man, nieuwe gigs inplannen, you rock!</p>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/gigs" method="post" data-parsley-validate>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">New gig</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="venue_name">Naam</label>
                                <input type="text" class="form-control" name="venue_name" placeholder="Naam" data-parsley-required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="venue_address">Adres</label>
                                <textarea type="text" class="form-control" name="venue_address" placeholder="Adres" data-parsley-required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="date">Datum</label>
                                <input type="date" class="form-control" name="date" placeholder="Times" data-parsley-required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="times">Tijden</label>
                                <textarea type="text" class="form-control" name="times" placeholder="Tijden"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="times">Backline</label>
                        <textarea type="text" class="form-control" name="backline" placeholder="Backline"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="times">Opmerkingen</label>
                        <textarea type="text" class="form-control" name="comments" placeholder="Comments"></textarea>
                    </div>
                    <div class="checkbox">
                        <label>
                          <input type="checkbox" name="confirmed"> Bevestigd
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Nevermind</button>
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Opslaan</button>
                </div>
                </form>
        </div>
    </div>
</div>
